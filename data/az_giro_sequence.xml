<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Delete old sequence if exists and create new one -->
        <delete model="ir.sequence" search="[('code', '=', 'az.giro.input')]"/>
        
        <!-- Sequence for Giro Input -->
        <record id="seq_az_giro_input" model="ir.sequence">
            <field name="name">Giro Input Sequence</field>
            <field name="code">az.giro.input</field>
            <field name="prefix">GIRO-%(y)s%(month)s-</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>
    </data>
</odoo>
