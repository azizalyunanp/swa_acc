<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Trial Balance Wizard Form View (Initial) -->
        <record id="view_trial_balance_wizard_form" model="ir.ui.view">
            <field name="name">swa.trial.balance.wizard.form</field>
            <field name="model">swa.trial.balance.wizard</field>
            <field name="arch" type="xml">
                <form string="Trial Balance">
                    <sheet>
                        <group name="filter_group" string="Filters">
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                            <group>
                                <field name="target_move" widget="radio"/>
                                <field name="show_accounts" widget="radio"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_generate" string="Generate" type="object" 
                                class="btn-primary" data-hotkey="g"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Trial Balance Line Tree View -->
        <record id="view_trial_balance_line_tree" model="ir.ui.view">
            <field name="name">swa.trial.balance.line.tree</field>
            <field name="model">swa.trial.balance.line</field>
            <field name="arch" type="xml">
                <!-- 
                    The data shown here comes from swa.trial.balance.line (TransientModel).
                    These lines are generated by the wizard and linked via wizard_id.
                    Because TransientModel data persists temporarily, when navigating back 
                    from "View History", the data is still available to be displayed here.
                -->
                <list string="Trial Balance" create="false" edit="false" delete="false">
                    <field name="account_id"/>
                    <field name="debit" sum="Total Debit"/>
                    <field name="credit" sum="Total Credit"/>
                    <field name="balance" sum="Total Balance"/>
                    <button name="action_view_history" string="View History" type="object" 
                            icon="fa-history" class="btn btn-link"/>
                </list>
            </field>
        </record>

        <!-- Trial Balance Line Search View -->
        <record id="view_trial_balance_line_search" model="ir.ui.view">
            <field name="name">swa.trial.balance.line.search</field>
            <field name="model">swa.trial.balance.line</field>
            <field name="arch" type="xml">
                <search string="Trial Balance">
                    <field name="account_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Account" name="group_by_account" context="{'group_by': 'account_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action to open Trial Balance Wizard -->
        <record id="action_trial_balance_wizard" model="ir.actions.act_window">
            <field name="name">Trial Balance</field>
            <field name="res_model">swa.trial.balance.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_trial_balance_wizard_form"/>
            <field name="target">new</field>
        </record>

        <!-- Action for Result List -->
        <record id="action_trial_balance_result" model="ir.actions.act_window">
            <field name="name">Trial Balance Result</field>
            <field name="res_model">swa.trial.balance.line</field>
            <field name="view_mode">list</field>
            <field name="view_id" ref="view_trial_balance_line_tree"/>
            <field name="target">current</field>
        </record>

        <!-- Menu Item for Trial Balance -->
        <menuitem id="menu_trial_balance_wizard"
                  name="Trial Balance Form"
                  parent="swa_acc.menu_user_defined_reports"
                  action="action_trial_balance_wizard"
                  sequence="100"/>
    </data>
</odoo>
