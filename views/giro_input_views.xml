<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Giro Input list View -->
        <record id="view_giro_input_list" model="ir.ui.view">
            <field name="name">az.giro.input.list</field>
            <field name="model">az.giro.input</field>
            <field name="arch" type="xml">
                <list string="Giro Input" decoration-info="state=='draft'" decoration-success="state=='confirmed'" decoration-muted="state=='cancelled'">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="partner_type"/>
                    <field name="partner_id"/>
                    <field name="cheque_reference"/>
                    <field name="amount" sum="Total Amount"/>
                    <field name="giro_account_id"/>
                    <field name="state" widget="badge" decoration-info="state=='draft'" decoration-success="state=='confirmed'" decoration-danger="state=='cancelled'"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>

        <!-- Giro Input Form View -->
        <record id="view_giro_input_form" model="ir.ui.view">
            <field name="name">az.giro.input.form</field>
            <field name="model">az.giro.input</field>
            <field name="arch" type="xml">
                <form string="Giro Input">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" 
                                class="oe_highlight" 
                                invisible="state != 'draft'" 
                                data-hotkey="q"/>
                        <button name="action_draft" string="Reset To Draft" type="object" 
                                class="btn btn-secondary"
                                invisible="state == 'draft'" 
                                data-hotkey="w"/>
                        <button name="action_cancel" string="Cancel" type="object" 
                                invisible="state != 'draft'" 
                                confirm="Are you sure you want to cancel this giro?"
                                data-hotkey="x"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                    </header>
                    <sheet>
                        <!-- Invisible fields -->
                        <field name="id" invisible="1"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="company_id" invisible="1"/>
                        <field name="partner_type" invisible="1"/>

                        <div class="oe_button_box" name="button_box">
                            <!-- Journal Entry button -->
                            <button name="button_open_journal_entry"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-bars"
                                    invisible="not account_move_id"
                                    groups="account.group_account_user,account.group_account_readonly">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Journal Entry</span>
                                </div>
                            </button>
                        </div>


                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" placeholder="New"/>
                            </h1>
                        </div>


                        <group name="main_group">
                            <group name="group1">
                                <field name="partner_type" widget="radio" options="{'horizontal': True}"
                                       readonly="state != 'draft'"/>
                                <field name="partner_id" context="{'default_is_company': True}" string="Customer"
                                       options="{'no_quick_create': True, 'no_create': True, 'no_create_edit': True}"
                                       invisible="partner_type != 'customer'"
                                       readonly="state != 'draft'"
                                       domain="[('customer_rank', '>', 0)]"/>
                                <field name="partner_id" context="{'default_is_company': True}" string="Vendor"
                                       options="{'no_quick_create': True, 'no_create': True, 'no_create_edit': True}"
                                       invisible="partner_type != 'vendor'"
                                       readonly="state != 'draft'"
                                       domain="[('supplier_rank', '>', 0)]"/>
                                <label for="amount"/>
                                <div name="amount_div" class="o_row">
                                    <field name="amount"
                                           readonly="state != 'draft'"/>
                                    <field name="currency_id"
                                           options="{'no_create': True, 'no_open': True}"
                                           required="1"
                                           readonly="state != 'draft'"
                                           groups="base.group_multi_currency"/>
                                </div>
                                <field name="date"
                                       readonly="state != 'draft'"/>
                                <field name="memo" string="Memo" 
                                       readonly="state != 'draft'"/>
                            </group>
                            <group name="group2">
                                <field name="giro_account_id" 
                                       options="{'no_create': True, 'no_create_edit': True}"
                                       readonly="state != 'draft'"/>
                                <field name="cheque_reference"
                                       readonly="state != 'draft'"/>
                                <field name="account_move_id" readonly="1" 
                                       invisible="not account_move_id"
                                       options="{'no_create': True}"/>
                                <field name="company_id" groups="base.group_multi_company" 
                                       options="{'no_create': True}"
                                       readonly="state != 'draft'"/>
                            </group>
                        </group>
                        <group>
                            <!-- To be used for additional information -->
                            <notebook name="giro_notebook" colspan="2"/>
                        </group>
                    </sheet>
                    <div class="o_attachment_preview"/>
                    <chatter/>
                </form>
            </field>
        </record>


        <!-- Giro Input Search View -->
        <record id="view_giro_input_search" model="ir.ui.view">
            <field name="name">az.giro.input.search</field>
            <field name="model">az.giro.input</field>
            <field name="arch" type="xml">
                <search string="Giro Input">
                    <field name="name" string="Reference"/>
                    <field name="partner_id"/>
                    <field name="cheque_reference"/>
                    <field name="giro_account_id"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <separator/>
                    <filter string="Customer" name="customer" domain="[('partner_type', '=', 'customer')]"/>
                    <filter string="Vendor" name="vendor" domain="[('partner_type', '=', 'vendor')]"/>
                    <separator/>
                    <filter string="Date" name="date" date="date"/>
                    <group expand="0" string="Group By">
                        <filter string="Partner" name="group_partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Partner Type" name="group_partner_type" context="{'group_by': 'partner_type'}"/>
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                        <filter string="Giro Account" name="group_giro_account" context="{'group_by': 'giro_account_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Giro Input Action -->
        <record id="action_giro_input" model="ir.actions.act_window">
            <field name="name">Giro Input</field>
            <field name="res_model">az.giro.input</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_draft': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Giro Input
                </p>
                <p>
                    Record giro/check transactions for customers and vendors.
                </p>
            </field>
        </record>

        <!-- Menu Items -->
        <menuitem id="menu_giro_input"
                  name="Giro Input"
                  parent="account.menu_finance_entries"
                  action="action_giro_input"
                  sequence="110"/>
    </data>
</odoo>
